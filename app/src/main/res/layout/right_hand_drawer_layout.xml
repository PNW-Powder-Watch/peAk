<?xml version="1.0" encoding="utf-8"?>
<!--Code for the right side nav drawer-->
<!--TODO: turn this into a separate fragment for reuse on group detail-->
<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_side"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:fitsSystemWindows="true"
    >
    <!--contains a linear layout to properly place and align the header and the recycler view-->
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <include layout="@layout/nav_header" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</com.google.android.material.navigation.NavigationView>